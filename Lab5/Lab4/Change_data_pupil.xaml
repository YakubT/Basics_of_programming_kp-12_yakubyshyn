        <ComboBox x:Name="cb_delete_class" HorizontalAlignment="Left" Height="28" Margin="1004,255,0,0" VerticalAlignment="Top" Width="87"/>
        <Label Content="Видалення класу з бази" HorizontalAlignment="Left" Height="29" Margin="943,226,0,0" VerticalAlignment="Top" Width="245" FontSize="15" FontFamily="Script MT Bold"/>
        <Button Content="Видалити" HorizontalAlignment="Left" Height="31" Margin="1004,303,0,0" VerticalAlignment="Top" Width="87" Click="Button_Click_5"/>
        <Label Content="Виставлення оцінок" HorizontalAlignment="Left" Height="29" Margin="1325,66,0,0" VerticalAlignment="Top" Width="245" FontSize="15" FontFamily="Script MT Bold"/>
        <TextBox x:Name="tbdel_Copy" HorizontalAlignment="Left" Height="31" Margin="1325,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontSize="15"/>
        <Label Content="Введіть ID:" HorizontalAlignment="Left" Height="29" Margin="1325,94,0,0" VerticalAlignment="Top" Width="245" FontSize="15" FontFamily="Times New Roman" FontWeight="Bold"/>
        <Button Content="Пошук" HorizontalAlignment="Left" Height="24" Margin="1349,170,0,0" VerticalAlignment="Top" Width="87" Click="Button_Click_6"/>
