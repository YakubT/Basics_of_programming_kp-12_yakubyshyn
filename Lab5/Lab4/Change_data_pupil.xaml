        <ComboBox x:Name="cbclasses" HorizontalAlignment="Left" Height="31" Margin="271,125,0,0" VerticalAlignment="Top" Width="94" SelectionChanged="cbclasses_SelectionChanged"/>
        <Button Content="Очистити поля" HorizontalAlignment="Left" Height="31" Margin="376,125,0,0" VerticalAlignment="Top" Width="98" Click="Button_Click_1"/>
        <Button Content="Видалити учня за ID" HorizontalAlignment="Left" Height="43" Margin="646,113,0,0" VerticalAlignment="Top" Width="135" Click="Button_Click_2"/>
        <TextBox x:Name="tbdel" HorizontalAlignment="Left" Height="31" Margin="646,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontSize="15"/>
